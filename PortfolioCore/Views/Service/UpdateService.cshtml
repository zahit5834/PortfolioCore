@model Service
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Hizmet Bilgisi Günvelleme Sayfası</h2>

<form method="post">
    <input type="hidden" asp-for="ServiceId"/>
    <label>Başlık</label>
    <input type="text" class="form-control" asp-for="ServiceName" style="border:1px solid black;" />
    <br />
    <label>İkon</label>
    <input type="text" class="form-control" asp-for="Icon" style="border:1px solid black;" />
    <br />
    <label>Açıklama</label>
    <input type="text" class="form-control" asp-for="Description" style="border:1px solid black;" />
    <br />
    <button class="btn btn-primary">Hizmet Bilgisi Güncelle</button>
</form>
