@model PortfolioCore.Entities.Experience
@{
    ViewData["Title"] = "UpdateExperience";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Deneyim Güncelleme Sayfası</h2>

<form method="post" >
    <input type="hidden" asp-for="ExperienceId" />
    <label>Başlık</label>
    <input type="text" class="form-control" asp-for="Title" style="border:1px solid black;" />
    <br />
    <label>Alt Başlık</label>
    <input type="text" class="form-control" asp-for="Subtitle" style="border:1px solid black;" />
    <br />
    <label>Tarih</label>
    <input type="text" class="form-control" asp-for="ExperienceDate" style="border:1px solid black;" />
    <br />
    <label>Açıklama</label>
    <input type="text" class="form-control" asp-for="Description" style="border:1px solid black;" />
    <br />
    <button class="btn btn-success">Deneyim Kaydet</button>
</form>